<script>

function slideAA() {
    let A = document.getElementById("boxA");
    A.addEventListener("click", function animationA() {
        A.style.animationName = "slidA"; 
        A.style.animationDuration = "5s";
        A.style.animationIterationCount = "initial";
        A.style.animationFillMode = "both";
        B.style.animationTimingFunction = "ease-in-out";
    });
    A.addEventListener("click", function changeBCA(callback) {
        setTimeout(() => {
            A.style.backgroundColor = "orange";
        callback(); }, 3500);
    });
}
slideAA();


